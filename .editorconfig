root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
